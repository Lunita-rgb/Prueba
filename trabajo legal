    <script>
        function showSection(sectionId) {
            hideSections();
            document.getElementById(sectionId).classList.remove('hidden');
        }

        function hideSections() {
            document.getElementById('legalidad').classList.add('hidden');
            document.getElementById('requisitos').classList.add('hidden');
        }
    </script>
